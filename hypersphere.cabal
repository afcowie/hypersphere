name:                hypersphere
version:             0.1.0.0
-- synopsis:            
-- description:         
license:             BSD3
license-file:        LICENCE
author:              Luke Clifton
maintainer:          ltclifton@gmail.com
-- copyright:           
-- category:            
build-type:          Simple
extra-source-files:  ChangeLog.md
cabal-version:       >=1.10

library 
  exposed-modules:
    Hypersphere.Check,
    Hypersphere.PhysicalInput,
    Hypersphere.Sample
    Hypersphere.Density

  build-depends:
    base >=4.9 && <4.10,
    aeson,
    attoparsec,
    Chart,
    Chart-diagrams,
    containers,
    contravariant,
    data-default,
    deepseq,
    directory,
    lens,
    log-domain,
    monad-bayes,
    mtl,
    statistics,
    text,
    time,
    transformers,
    unordered-containers,
    vector,
    vector-algorithms
  hs-source-dirs:      lib
  default-language:    Haskell2010

executable example
  main-is: Main.hs
  ghc-options: -O2
  build-depends:
    base >=4.9 && <4.10,
    aeson,
    bytestring,
    Chart,
    Chart-diagrams,
    containers,
    hypersphere,
    monad-bayes,
    text
  hs-source-dirs:      example
  default-language:    Haskell2010

test-suite test
  default-language:    Haskell2010
  type: exitcode-stdio-1.0
  hs-source-dirs: test
  main-is: Main.hs
  build-depends:
    base >=4.9 && <4.10,
    tasty,
    tasty-hunit,
    tasty-quickcheck,
    quickcheck-instances,
    aeson,
    bytestring,
    Chart,
    Chart-diagrams,
    containers,
    hypersphere,
    monad-bayes,
    text,
    vector

benchmark bench
  type: exitcode-stdio-1.0
  hs-source-dirs: bench
  main-is: Main.hs
  build-depends:
    base >=4.9 && <4.10,
    criterion,
    deepseq,
    hypersphere,
    vector
  ghc-options: -O2
